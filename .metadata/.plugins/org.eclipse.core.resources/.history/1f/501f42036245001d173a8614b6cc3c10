package com.algorithm;

public class SportsMan {

	String name;
	String state;
	String country;
	String color;
	int age;
	String[] role;
	
	public SportsMan(String name, String state, String country, String color, int age) {
		this.name = name;
		this.state = state;
		this.country = country;
		this.color = color;
		this.age = age;
	}
	
	public String getBehaviour() {
		String behaviour = name + " is a ";
		
		for (int i = 0; i < role.length; i++) {
			behaviour += role[i];
			behaviour += " and ";
		}
		
		return behaviour;
	}
}
